<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <View
        android:id="@+id/lineTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_0_0_5x"
        android:layout_marginLeft="@dimen/margin_padding_1x"
        android:layout_marginRight="@dimen/margin_padding_1x"
        android:background="@color/colorLine" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtTitleLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_detail_location_title"
            android:textColor="@color/colorNearBlack"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAddressLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitleLocation"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_toStartOf="@id/txtDistanceLocation"
            android:layout_toLeftOf="@id/txtDistanceLocation"
            android:text="@string/item_detail_location_address"
            android:textColor="@color/colorTextTitleEdt"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/txtDistanceLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/txtAddressLocation"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="@dimen/margin_padding_1x"
            android:layout_marginLeft="@dimen/margin_padding_1x"
            android:text="@string/item_detail_location_distance"
            android:textColor="@color/colorVAT"
            android:textSize="@dimen/text_size_13" />
    </RelativeLayout>

    <View
        android:id="@+id/lineBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_0_0_5x"
        android:layout_marginLeft="@dimen/margin_padding_1x"
        android:layout_marginRight="@dimen/margin_padding_1x"
        android:background="@color/colorLine" />
</LinearLayout>