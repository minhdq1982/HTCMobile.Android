<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroundSpec"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spec_height"
        android:background="@color/colorBackgroundSpec"
        android:gravity="center"
        android:padding="@dimen/margin_padding_0_5x"
        android:textColor="@color/colorTextTile"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/spec_height"
        android:layout_marginBottom="@dimen/line_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvValue1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/margin_padding_0_5x" />

        <TextView
            android:id="@+id/tvValue2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/line_height"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/margin_padding_0_5x" />
    </LinearLayout>
</LinearLayout>