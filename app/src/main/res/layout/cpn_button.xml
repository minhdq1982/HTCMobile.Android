<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRootView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bt_height"
    tools:background="@drawable/bg_button_blue2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_padding_1x"
            android:layout_marginRight="@dimen/margin_padding_1_2x"
            android:src="@drawable/ic_arrow_left_black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvText"
            style="@style/FontRealBold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_17"
            tools:text="Button" />

        <ImageView
            android:id="@+id/imRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_padding_1_2x"
            android:layout_marginRight="@dimen/margin_padding_1x"
            android:src="@drawable/ic_arrow_right_white"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/vOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.05"
        android:background="@drawable/bg_button_press" />
</FrameLayout>