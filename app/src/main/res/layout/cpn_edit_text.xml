<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/edit_text_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_1x"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_1_5x"
            android:layout_toRightOf="@+id/ivIcon"
            android:layout_centerInParent="true"
            android:background="@null"
            android:scrollbars="vertical"
            android:gravity="center_vertical"
            android:textColor="@color/colorEditText"
            android:textColorHint="@color/colorTextGray"
            android:paddingBottom="@dimen/margin_padding_0_5x"
            android:text="Adfakjdlfjalsdjfksda ajdfadfdkjfajkdsfksadjfk akdfjadsjf\n" />

    </RelativeLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_gravity="bottom"
        android:background="@color/colorLine" />
</FrameLayout>