<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgNews"
            android:layout_width="match_parent"
            android:layout_height="@dimen/news_item_top_height"
            android:layout_margin="@dimen/margin_padding_0_5x"
            android:background="@color/colorDefaultImage"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/margin_padding_4x"
            android:layout_height="@dimen/margin_padding_4x"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_padding_0_5x"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTimeNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_padding_0_5x"
        android:paddingRight="@dimen/margin_padding_0_5x"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text_size_default_14sp"
        tools:text="15/6/2018" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_0_5x"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/margin_padding_0_5x"
        android:maxLines="2"
        android:padding="@dimen/margin_padding_0_5x"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold"
        tools:text="Hyundai Thành Công công bố kết quả bán hàng tháng 9/2018" />

    <TextView
        android:id="@+id/txtContentNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_1x"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/margin_padding_0_5x"
        android:maxLines="4"
        android:paddingLeft="@dimen/margin_padding_0_5x"
        android:paddingRight="@dimen/margin_padding_0_5x"
        android:textSize="@dimen/text_size_14"
        tools:text="12321321321123213" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_2x"
        android:layout_marginBottom="@dimen/margin_padding_0_5x"
        android:background="@color/colorLine" />
</LinearLayout>