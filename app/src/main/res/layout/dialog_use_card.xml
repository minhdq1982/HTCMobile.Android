<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_5x"
        android:background="@drawable/bg_membership_gold">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_3_5x"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_marginRight="@dimen/margin_padding_3_5x"
            android:layout_marginBottom="@dimen/margin_padding_1_5x"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAgency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_padding_1x"
                    android:textAllCaps="true"
                    android:textColor="@color/colorTextTile"
                    android:textSize="@dimen/text_size_12"
                    android:textStyle="bold"
                    tools:text="HyunDai\n Giai phong" />

                <FrameLayout
                    android:id="@+id/cpnbOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right">

                    <ImageView
                        android:id="@+id/imgHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bg_hide_card_gold" />

                    <TextView
                        android:id="@+id/txtHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/use_card_done" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_padding_5x"
            android:layout_marginTop="@dimen/margin_padding_6x"
            android:layout_marginRight="@dimen/margin_padding_5x"
            android:layout_marginBottom="@dimen/margin_padding_4x"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imQRCode"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="@dimen/margin_padding_2x"
                android:layout_marginBottom="@dimen/margin_padding_2x"
                android:background="@color/colorWhite"
                android:paddingTop="@dimen/margin_padding_2x"
                android:paddingBottom="@dimen/margin_padding_3x" />

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imQRCode"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_padding_1x"
                android:textSize="@dimen/text_size_17" />

        </RelativeLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>