<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivDot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtPeriod"
        android:layout_alignBottom="@id/txtPeriod"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_dot" />

    <ImageView
        android:layout_width="@dimen/margin_padding_0_2x"
        android:layout_height="190dp"
        android:layout_below="@id/ivDot"
        android:layout_alignLeft="@id/ivDot"
        android:layout_alignRight="@id/ivDot"
        android:layout_marginLeft="@dimen/margin_padding_0_7x"
        android:layout_marginRight="@dimen/margin_padding_0_7x"
        android:background="@drawable/ic_column" />


    <TextView
        android:id="@+id/txtPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_1x"
        android:layout_toRightOf="@id/ivDot"
        android:text="@string/installment_term"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtPeriod"
        android:layout_marginLeft="@dimen/margin_padding_0_5x"
        android:layout_toRightOf="@id/txtPeriod"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPeriod"
        android:layout_alignLeft="@id/txtPeriod"
        android:layout_marginTop="@dimen/margin_padding_0_5x"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_1x"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_padding_0_5x"
                android:text="@string/installment_total_debt"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txtTotalDebt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="@dimen/margin_padding_0_5x"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_padding_0_5x"
                android:text="@string/installment_original"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txtOriginal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="@dimen/margin_padding_0_5x"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_padding_0_5x"
                android:text="@string/installment_interest"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txtInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="@dimen/margin_padding_0_5x"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_padding_0_5x"
                android:text="@string/installment_original_interest"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txtOriginalInterest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:padding="@dimen/margin_padding_0_5x"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>