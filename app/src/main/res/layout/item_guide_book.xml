<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_0_7x">

    <com.tvo.htc.view.component.CpnScaleImageView
        android:id="@+id/cpnbSaleImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale="1.32" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_1_5x">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_3_5x"
                android:layout_marginRight="@dimen/margin_padding_1_5x"
                android:gravity="top|center"
                android:text="Title of book\nxaaa"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_size_title" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding_2x"
            android:paddingBottom="@dimen/margin_padding_3x">

            <ImageView
                android:id="@+id/imPreview"
                android:layout_width="175dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                tools:src="@drawable/ic_error_book_car_preview" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>