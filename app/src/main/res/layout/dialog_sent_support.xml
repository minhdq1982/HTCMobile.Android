<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackgroundTitleChangeAvatar"
            android:paddingLeft="@dimen/margin_padding_1x"
            android:paddingTop="@dimen/margin_padding_1_5x"
            android:paddingRight="@dimen/margin_padding_1x"
            android:paddingBottom="@dimen/margin_padding_1_5x"
            android:text="@string/dialog_sent_support_title"
            android:textSize="@dimen/text_size_17"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnCallHotline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_contact"
            android:drawablePadding="@dimen/margin_padding_1_5x"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding_1x"
            android:paddingTop="@dimen/margin_padding_1_5x"
            android:paddingRight="@dimen/margin_padding_1x"
            android:paddingBottom="@dimen/margin_padding_1_5x"
            android:text="@string/dialog_sent_support_call_hotline"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/btnSentForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_content"
            android:drawablePadding="@dimen/margin_padding_1_5x"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding_1x"
            android:paddingTop="@dimen/margin_padding_1_5x"
            android:paddingRight="@dimen/margin_padding_1x"
            android:paddingBottom="@dimen/margin_padding_1_5x"
            android:text="@string/dialog_sent_support_sent_form"
            android:textSize="@dimen/text_size_17" />

    </LinearLayout>

</LinearLayout>