<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/custom_tab_height"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:minWidth="0dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_padding_1x"
        android:paddingTop="@dimen/margin_padding_0_5x"
        android:paddingRight="@dimen/margin_padding_1x"
        android:paddingBottom="@dimen/margin_padding_0_5x"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_17" />

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_0_4x"
        android:background="@color/colorTabSelected"
        android:visibility="invisible" />
</LinearLayout>
