<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llRootView"
    android:layout_width="@dimen/home_news_item_width"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/margin_padding_1_5x"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/border_radius">

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_news_item_banner_height"
            android:layout_weight="1"
            android:background="@color/colorDefaultImage"
            android:scaleType="centerCrop"
            android:src="@drawable/img_no_image" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_0_5x"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#99a9bb"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_0_2x"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_15" />
</LinearLayout>