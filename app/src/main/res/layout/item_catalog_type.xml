<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_1_2x"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundSpecTitle"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_padding_1_2x"
        android:paddingTop="@dimen/margin_padding_0_9x"
        android:paddingBottom="@dimen/margin_padding_0_9x"
        android:text="Động cơ"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />


</LinearLayout>