<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_height"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/margin_padding_0_9x"
        android:background="@color/colorBorder"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_padding_1x"
        android:background="@color/colorTab" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_0_5x">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_home_selector" />

            <TextView
                style="@style/FontRealBold"
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabba_home"
                android:textColor="@color/color_text_tabbar"
                android:textSize="@dimen/text_size_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_0_5x">

            <ImageView
                android:id="@+id/ivCar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_car_selector" />

            <TextView
                style="@style/FontRealBold"
                android:id="@+id/tvCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabbar_buy_car"
                android:textColor="@color/color_text_tabbar"
                android:textSize="@dimen/text_size_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llService"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_0_5x">

            <ImageView
                android:id="@+id/ivService"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_service_selector" />

            <TextView
                style="@style/FontRealBold"
                android:id="@+id/tvService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabbar_service"
                android:textColor="@color/color_text_tabbar"
                android:textSize="@dimen/text_size_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_0_5x">

            <ImageView
                android:id="@+id/ivNews"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_new_selector" />

            <TextView
                style="@style/FontRealBold"
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabbar_news"
                android:textColor="@color/color_text_tabbar"
                android:textSize="@dimen/text_size_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSupport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_1x"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_0_5x">

            <ImageView
                android:id="@+id/ivSupport"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/ic_support_selector" />

            <TextView
                style="@style/FontRealBold"
                android:id="@+id/tvSupport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabbar_support"
                android:textColor="@color/color_text_tabbar"
                android:textSize="@dimen/text_size_9" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>