<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_padding_1x"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTimeNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_0_5x"
        android:layout_marginRight="@dimen/margin_padding_0_5x"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text_size_13" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_0_5x"
        android:layout_marginTop="@dimen/margin_padding_0_5x"
        android:layout_marginRight="@dimen/margin_padding_0_5x"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/margin_padding_0_5x"
        android:maxLines="2"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_1x"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_0_5x"
            android:layout_marginRight="@dimen/margin_padding_0_5x"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="match_parent"
                android:layout_height="@dimen/news_item_height"
                android:background="@color/colorDefaultImage"
                android:scaleType="centerCrop"
                android:src="@drawable/img_no_image" />

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="@dimen/margin_padding_3x"
                android:layout_height="@dimen/margin_padding_3x"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding_0_5x" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtContentNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_0_5x"
            android:layout_marginRight="@dimen/margin_padding_0_5x"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/margin_padding_0_5x"
            android:maxLines="4"
            android:paddingLeft="@dimen/margin_padding_0_5x"
            android:paddingRight="@dimen/margin_padding_0_5x"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_padding_2x"
        android:layout_marginBottom="@dimen/margin_padding_0_5x"
        android:background="@color/colorLine" />
</LinearLayout>
