<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/border_radius"
                android:bottomRightRadius="@dimen/border_radius"
                android:topLeftRadius="@dimen/border_radius"
                android:topRightRadius="@dimen/border_radius" />
            <solid
                android:color="@color/colorBlack" />
            <stroke
                android:width="0dp"
                android:color="@color/colorBorder" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/border_radius"
                android:bottomRightRadius="@dimen/border_radius"
                android:topLeftRadius="@dimen/border_radius"
                android:topRightRadius="@dimen/border_radius" />
            <solid
                android:color="@color/colorBlack" />
            <stroke
                android:width="0dp"
                android:color="@color/colorBorder" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners
                android:bottomLeftRadius="@dimen/border_radius"
                android:bottomRightRadius="@dimen/border_radius"
                android:topLeftRadius="@dimen/border_radius"
                android:topRightRadius="@dimen/border_radius" />
            <solid
                android:color="@color/colorBlack" />
            <stroke
                android:width="0dp"
                android:color="@color/colorBorder" />
        </shape>
    </item>
    <item>
        <color android:color="@color/colorTransparent" />
    </item>
</selector>